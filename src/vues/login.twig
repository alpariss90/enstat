{% extends 'baselogin.twig' %}

{% block title %} AUTHENTIFICATION {% endblock  %}

{% block content %} 
<section class="vh-100" style="background-color: #FF9200;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; background-color: #009257">


            {% if result.error|length > 0 %}
            <div class="alert alert-danger">
            <strong>{{ result.error }}</strong> 
            </div>
            {% else %}
            {% if result.success|length > 0 %}
            <div class="alert alert-success">
            <strong>{{ result.success }}</strong> 
            </div>
            {% endif %}
            {% endif %}


          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block" style=" background-color: #009257">
             <br><br><br><br>
              <img
                src="/img/bonome.png"
                alt="login form"
                class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 75%"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/login.php" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fa fa-cubes fa-2x me-3" style="color: #2ED250"></i>
                    <span class="h1 fw-bold mb-0">
                    <img src="/img/logo.jpg"  style="max-height: 200px"/>
                    </span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">CONNECTE TOI A TON COMPTE</h5>

                  <div class="form-outline mb-4">
                    <input type="text" id="form2Example17" class="form-control form-control-lg" name="login" required/>
                    <label class="form-label" for="form2Example17">Nom utilisateur</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="form2Example27" class="form-control form-control-lg" name="password" required/>
                    <label class="form-label" for="form2Example27">Mot de passe</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">CONNEXION</button>
                  </div>

                  <!--<a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="#!" style="color: #393f81;">Register here</a></p>
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>-->
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}